# .github/workflows/ci.yml
name: CI

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  markdownlint:
    name: MarkdownLint
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: Install markdownlint-cli
        run: |
          npm install -g markdownlint-cli

      - name: Run markdownlint
        run: |
          markdownlint "docs/**/*.md" "*.md"

  generate-toc:
    name: Auto-generate TOC
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3

      - name: Generate Table of Contents
        uses: jasonEtco/markdown-toc@v2
        with:
          files: |
            README.md
            docs/TableKuznetsova.md
            docs/PhoneticMapping.md
            docs/ZWJSequences.md

      - name: Commit TOC updates
        run: |
          git config user.name "github-actions"
          git config user.email "actions@github.com"
          git add README.md docs/TableKuznetsova.md docs/PhoneticMapping.md docs/ZWJSequences.md
          git commit -m "ci: update autogenerated TOC" || echo "No changes to commit"
          git push
